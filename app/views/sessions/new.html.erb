<h2 class="ui center aligned large header">
  Bem-vindo ao MessageChat - <em>um aplicativo de bate-papo completo</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Faça login para continuar
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
      <form class="ui form">
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Nome de usuário" %>            
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
           <%= f.password_field :password, placeholder: "Senha" %>            
           <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui orange submit button" %>
      <% end %>
      </form>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange disabled button">
        <i class="signup icon"></i>
        Cadastrar-se
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Ou
  </div>
</div>